<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minWidth="800dp"
    android:minHeight="460dp"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btninputnote"
            android:layout_alignParentEnd="true"

            android:paddingVertical="12dp"
            android:layout_marginEnd="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView
            android:id="@+id/inputstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Data Pengukuran"
            android:textColor="@color/white"
            android:textSize="20sp">

        </TextView>

        <ImageView
            android:id="@+id/btnclose"
            android:layout_alignParentStart="true"
            android:src="@drawable/close"
            android:paddingVertical="15dp"
            android:layout_marginStart="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
    </RelativeLayout>

    <TextView
        android:text="Ukuran Sapi"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <EditText
        android:id="@+id/inputlingkardada"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangleedittext"
        android:hint="Lingkar Dada ( Cm )"
        android:textColorHint="#80000000"
        android:textColor="@color/black"
        android:padding="10dp">
    </EditText>

    <EditText
        android:id="@+id/inputpanjangbadan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#80000000"
        android:background="@drawable/rectangleedittext"
        android:hint="Panjang Badan ( Cm )"

        android:textColor="@color/black"
        android:padding="10dp">
    </EditText>

    <TextView
        android:text="Jenis Sapi"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_field_jenis"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:backgroundTint="@color/black"
        android:hint="Optional"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        app:endIconTint="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp">

        <AutoCompleteTextView
            android:id="@+id/jenisoption"
            android:focusable="false"
            tools:ignore="SpeakableTextPresentCheck"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangleedittext"

            android:singleLine="false"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="10dp">
        </AutoCompleteTextView>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:alpha="0.5"
        android:id="@+id/btnhitung"
        android:backgroundTint="@color/blue"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:layout_marginVertical="40dp"
        android:text="Hitung"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </Button>


</LinearLayout>