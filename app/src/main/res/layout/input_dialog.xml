<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:minWidth="800dp"
    android:minHeight="500dp"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btninputnote"
            android:layout_alignParentEnd="true"

            android:paddingVertical="12dp"
            android:layout_marginEnd="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView
            android:id="@+id/inputstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Data Pengukuran"
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>

        <ImageView
            android:id="@+id/btnclose"
            android:layout_alignParentStart="true"
            android:src="@drawable/close"
            android:paddingVertical="15dp"
            android:layout_marginStart="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>
    </RelativeLayout>


    <EditText
        android:id="@+id/lingkardada"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangleedittext"
        android:hint="Lingkar Dada ( cm )"
        android:textColorHint="#80000000"
        android:textColor="@color/black"
        android:padding="10dp">
    </EditText>

    <EditText
        android:id="@+id/panjangbadan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#80000000"
        android:background="@drawable/rectangleedittext"
        android:hint="Panjang Badan ( cm )"

        android:textColor="@color/black"
        android:padding="10dp">
    </EditText>

    <Button
        android:id="@+id/btnhitung"
        android:backgroundTint="@color/blue"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:text="Hitung"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </Button>


</LinearLayout>