<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:background="@color/blue"
    tools:context=".View.Fragment.HomeFragment">

    <!--    <ScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent">-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/cow_icon_trans_lite"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/title"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:layout_marginTop="20dp"
                        android:text="Apa itu Bobosa?"
                        android:layout_marginHorizontal="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="40dp"
                    android:background="@color/white"/>





            </LinearLayout>

            <TextView

                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                android:text="Bobosa merupakan aplikasi estimasi bobot badan sapi secara digital yang melakukan estimasi menggunakan pendekatan rumus hasil penelitian"
                android:layout_marginHorizontal="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView

                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                android:text="Hasil dari bobosa tidak selalu 100% akurat, oleh karna itu bobosa juga menyiapkan fitur akurasi supaya pengguna bisa mengetahui berapa persentase peyimpangan dari estimasi yang dihasilkan aplikasi ini"
                android:layout_marginHorizontal="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView

                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_marginTop="35dp"
                android:text="Versi Aplikasi"
                android:layout_marginHorizontal="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="40dp"
                android:background="@color/white"/>

            <TextView
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                android:text="Versi: 1.0"
                android:layout_marginHorizontal="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_marginTop="5dp"
                android:text="Tahun Rilis: 2023"
                android:layout_marginHorizontal="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
    </ScrollView>


    <!--    </ScrollView>-->


</LinearLayout>