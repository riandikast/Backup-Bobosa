<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".View.Fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:src="@drawable/cow_gotidea"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:padding="10dp"
        />


        <LinearLayout
            android:orientation="vertical"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/white"/>

            <TextView
                android:textColor="@color/white"
                android:text="Data pengukuran"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lingkardadatext"
                    android:textColor="@color/white"
                    android:text="Lingkar Dada"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/datalingkardada"
                    android:textColor="@color/white"
                    android:text="20cm"
                    android:textSize="20sp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/panjangbadantext"
                    android:textColor="@color/white"
                    android:text="Panjang Badan"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/datapanjangbadan"
                    android:textColor="@color/white"
                    android:text="20cm"
                    android:textSize="20sp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/jenissapitext"
                    android:textColor="@color/white"
                    android:text="Jenis Sapi"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/jenissapi"
                    android:textColor="@color/white"
                    android:text="-"
                    android:textSize="20sp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

            <View
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/white"/>
            <View
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/white"/>

            <TextView
                android:textColor="@color/white"
                android:text="Hasil Estimasi"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/schoorltitle"
                    android:textColor="@color/white"
                    android:text="Schoorl Denmark"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:id="@+id/starsdenm"
                    android:visibility="invisible"
                    android:src="@drawable/star"
                    android:layout_toEndOf="@+id/schoorltitle"
                    android:layout_width="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="20dp">

                </ImageView>

                <TextView
                    android:id="@+id/schoorlvalue"
                    android:textColor="@color/white"
                    android:text="0 Kg"
                    android:textSize="20sp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/schoorlIDtitle"
                    android:textColor="@color/white"
                    android:text="Schoorl Indonesia"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <ImageView
                    android:id="@+id/starsind"
                    android:visibility="invisible"
                    android:src="@drawable/star"
                    android:layout_toEndOf="@+id/schoorlIDtitle"
                    android:layout_width="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="20dp">

                </ImageView>

                <TextView
                    android:id="@+id/schoorlIDvalue"
                    android:textColor="@color/white"
                    android:text="0 Kg"
                    android:textSize="20sp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/wintertitle"
                    android:textColor="@color/white"
                    android:text="Winter Eropa"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:id="@+id/starwerop"
                    android:visibility="invisible"
                    android:src="@drawable/star"
                    android:layout_toEndOf="@+id/wintertitle"
                    android:layout_width="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="20dp">

                </ImageView>

                <TextView
                    android:id="@+id/wintervalue"
                    android:textColor="@color/white"
                    android:text="0 Kg"
                    android:textSize="20sp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/winterIDtitle"
                    android:textColor="@color/white"
                    android:text="Winter Indonesia"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:id="@+id/starswid"
                    android:visibility="invisible"
                    android:src="@drawable/star"
                    android:layout_toEndOf="@+id/winterIDtitle"
                    android:layout_width="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="20dp">

                </ImageView>
                <TextView
                    android:id="@+id/winterIDvalue"
                    android:textColor="@color/white"
                    android:text="0 Kg"
                    android:textSize="20sp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lambournetitle"
                    android:textColor="@color/white"
                    android:text="Arjodarmoko"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:id="@+id/starsarjo"
                    android:visibility="invisible"
                    android:src="@drawable/star"
                    android:layout_toEndOf="@+id/lambournetitle"
                    android:layout_width="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="20dp">

                </ImageView>
                <TextView
                    android:id="@+id/lambournevalue"
                    android:textColor="@color/white"
                    android:text="0 Kg"
                    android:textSize="20sp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </RelativeLayout>

            <View
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/white"/>



            <TextView
                android:textColor="@color/white"
                android:text="Rekomendasi"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rekomenval"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:text="Untuk Sapi Jenis X disarankan menggunakan hasil dari rumus y"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>



            <View
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/white"/>
        </LinearLayout>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>