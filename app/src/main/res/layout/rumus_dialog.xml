<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_dialog2"
    android:minWidth="800dp"
    android:minHeight="460dp"
    android:orientation="vertical">

    <RelativeLayout

        android:background="@drawable/rounded_dialog2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btninputnote"
            android:layout_alignParentEnd="true"

            android:paddingVertical="12dp"
            android:layout_marginEnd="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>



        <ImageView
            android:id="@+id/btnclose"
            android:layout_alignParentStart="true"
            android:src="@drawable/close"
            android:paddingVertical="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>


    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView

                    android:src="@drawable/opened_book"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginVertical="5dp"
                    android:padding="1dp"
                    />

                <TextView
                    android:id="@+id/nama_rumus"
                    android:textColor="@color/white"
                    android:text="Rumus Arjodarmoko"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/gambar_rumus"
                        android:src="@drawable/rumus_arjo"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="2dp"
                        />

                    <ImageView

                        android:src="@drawable/keterangan_rumus_sapi"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="10dp"
                        android:padding="1dp"
                        />
                </LinearLayout>







            </LinearLayout>



        </RelativeLayout>




    </com.google.android.material.card.MaterialCardView>

</LinearLayout>