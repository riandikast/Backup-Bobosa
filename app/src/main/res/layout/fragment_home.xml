<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.Fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/cow_thinking"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:padding="-40dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/startestimasi"
                android:layout_marginVertical="12dp"
                android:layout_width="match_parent"
                android:backgroundTint="@color/blue"
                android:layout_marginHorizontal="65dp"
                app:cardCornerRadius="10dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <!--            <ImageView-->
                    <!--                android:id="@+id/imgest"-->
                    <!--                android:layout_gravity="center"-->
                    <!--                android:src="@drawable/calcu"-->
                    <!--                android:padding="5dp"-->
                    <!--                android:layout_marginHorizontal="8dp"-->
                    <!--                android:layout_width="65dp"-->
                    <!--                android:layout_height="65dp">-->

                    <!--            </ImageView>-->

                    <TextView

                        android:text="Mulai Estimasi"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/panduan"
                android:layout_marginVertical="8dp"
                android:layout_width="match_parent"
                android:backgroundTint="@color/blue"
                android:layout_marginHorizontal="65dp"
                app:cardCornerRadius="10dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <!--            <ImageView-->
                    <!--                android:id="@+id/imgpand"-->
                    <!--                android:layout_gravity="center"-->
                    <!--                android:src="@drawable/userm"-->
                    <!--                android:padding="5dp"-->
                    <!--                android:layout_marginHorizontal="8dp"-->
                    <!--                android:layout_width="65dp"-->
                    <!--                android:layout_height="65dp">-->

                    <!--            </ImageView>-->


                    <TextView

                        android:text="Panduan"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TextView>

                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/perpustakaan"
                android:layout_marginVertical="12dp"
                android:layout_width="match_parent"
                android:backgroundTint="@color/blue"
                android:layout_marginHorizontal="65dp"
                app:cardCornerRadius="10dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <!--            <ImageView-->
                    <!--                android:id="@+id/imgperpus"-->
                    <!--                android:layout_gravity="center"-->
                    <!--                android:src="@drawable/lib"-->
                    <!--                android:padding="5dp"-->

                    <!--                android:layout_marginHorizontal="8dp"-->
                    <!--                android:layout_width="55dp"-->
                    <!--                android:layout_height="55dp">-->

                    <!--            </ImageView>-->


                    <TextView

                        android:text="Perpustakaan"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TextView>

                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <TextView
                android:textColor="@color/blue"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="60dp"
                android:text="Lainya"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView

                        android:layout_marginVertical="12dp"
                        android:layout_width="220dp"
                        android:backgroundTint="@color/blue"
                        android:layout_marginStart="25dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView

                                android:layout_gravity="center"
                                android:src="@drawable/history_icon"
                                android:padding="8dp"

                                android:layout_marginHorizontal="8dp"
                                android:layout_width="55dp"
                                android:layout_height="55dp">

                            </ImageView>


                            <TextView
                                android:text="Riwayat"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:layout_marginEnd="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_marginVertical="12dp"
                        android:layout_width="220dp"
                        android:backgroundTint="@color/blue"
                        android:layout_marginStart="25dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView

                                android:layout_gravity="center"
                                android:src="@drawable/accurate"
                                android:padding="5dp"
                                android:layout_marginHorizontal="8dp"
                                android:layout_width="55dp"
                                android:layout_height="55dp">

                            </ImageView>


                            <TextView
                                android:text="Akurasi"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:layout_marginEnd="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_marginVertical="12dp"
                        android:layout_width="220dp"
                        android:backgroundTint="@color/blue"
                        android:layout_marginHorizontal="25dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView

                                android:layout_gravity="center"
                                android:src="@drawable/batch"
                                android:padding="5dp"
                                android:layout_marginHorizontal="8dp"
                                android:layout_width="55dp"
                                android:layout_height="55dp">

                            </ImageView>


                            <TextView
                                android:text="Batch Estimasi"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:layout_marginEnd="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>






                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>





</LinearLayout>
