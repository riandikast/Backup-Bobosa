<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.Fragment.HomeFragment">

    <ImageView
        android:src="@drawable/cow_thinking"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:padding="-40dp"
         />

    <androidx.cardview.widget.CardView
        android:id="@+id/startestimasi"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/blue"
        android:layout_marginHorizontal="65dp"
        app:cardCornerRadius="10dp"
        android:layout_height="70dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgest"
                android:layout_gravity="center"
                android:src="@drawable/calcu"
                android:padding="5dp"
                android:layout_marginHorizontal="8dp"
                android:layout_width="65dp"
                android:layout_height="65dp">

            </ImageView>

            <TextView

                android:text="Mulai Estimasi"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/panduan"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/blue"
        android:layout_marginHorizontal="65dp"
        app:cardCornerRadius="10dp"
        android:layout_height="70dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgpand"
                android:layout_gravity="center"
                android:src="@drawable/userm"
                android:padding="5dp"
                android:layout_marginHorizontal="8dp"
                android:layout_width="65dp"
                android:layout_height="65dp">

            </ImageView>


            <TextView

                android:text="Panduan           "
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/perpustakaan"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/blue"
        android:layout_marginHorizontal="65dp"
        app:cardCornerRadius="10dp"
        android:layout_height="70dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgperpus"
                android:layout_gravity="center"
                android:src="@drawable/lib"
                android:padding="5dp"

                android:layout_marginHorizontal="8dp"
                android:layout_width="55dp"
                android:layout_height="55dp">

            </ImageView>


            <TextView

                android:text="Perpustakaan  "
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/white"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>



    </androidx.cardview.widget.CardView>






</LinearLayout>